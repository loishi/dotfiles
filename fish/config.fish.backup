set PATH 	/usr/local/texlive/2021/bin/x86_64-darwin $PATH
set PATH        $HOME/.cargo/bin $PATH
set MANPATH 	/usr/local/texlive/2020/texmf-dist/doc/man $MANPATH
set INFOPATH 	/usr/local/texlive/2020/texmf-dist/doc/info $INFOPATH
set -g -x GPG_TTY (tty)
set -g -x SSH_AUTH_SOCK (gpgconf --list-dirs agent-ssh-socket)

# TeX
starship init fish | source
set -x fish_user_paths /Library/TeX/texbin $fish_user_paths
alias ssh "env TERM=xterm ssh"
alias la "exa -al"
alias ll "exa -al"
alias bu "sudo tlmgr update -all -self && brew update && brew upgrade && brew upgrade --cask && pip list -o --format=freeze | grep -v '^\-e' | cut -d = -f 1 | xargs -n1 pip install -U pip && rustup update stable && cargo install-update -a"
set -g fish_user_paths "/usr/local/sbin" $fish_user_paths
gpgconf --launch gpg-agent
